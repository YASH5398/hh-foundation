rules_version = '2';
service firebase.storage {
  match /b/{bucket}/o {

    // E-PIN screenshots - allow authenticated users
    match /epinScreenshots/{allPaths=**} {
      allow read, write: if request.auth != null;
    }

    // Payment screenshots - allow authenticated users
    match /payment-screenshots/{allPaths=**} {
      allow read, write: if request.auth != null;
    }

    // General uploads folder - allow authenticated users
    match /uploads/{allPaths=**} {
      allow read, write: if request.auth != null;
    }

    // Deny all other paths by default
    match /{allPaths=**} {
      allow read, write: if false;
    }
  }
}
