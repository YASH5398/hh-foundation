rules_version = '2';
service firebase.storage {
  match /b/{bucket}/o {
    
    function isAuthenticated() {
      return request.auth != null;
    }

    function isAdmin() {
      return request.auth != null && request.auth.token.role == 'admin';
    }

    // E-PIN screenshots - allow authenticated users to upload and read their own files
    match /epin-screenshots/{userId}/{fileName} {
      allow read: if isAuthenticated() && (request.auth.uid == userId || isAdmin());
      allow write: if isAuthenticated() && request.auth.uid == userId;
    }

    // Payment proofs - allow authenticated users to upload and read their own files
    match /payment-proofs/{userId}/{fileName} {
      allow read: if isAuthenticated() && (request.auth.uid == userId || isAdmin());
      allow write: if isAuthenticated() && request.auth.uid == userId;
    }

    // Profile images - allow authenticated users to upload and read
    match /profile-images/{userId}/{fileName} {
      allow read: if isAuthenticated();
      allow write: if isAuthenticated() && request.auth.uid == userId;
    }

    // QR codes and system images - read access for authenticated users
    match /qr-codes/{fileName} {
      allow read: if isAuthenticated();
      allow write: if isAdmin();
    }

    // Chat images - allow authenticated users to upload and read if they are chat participants
    match /chat_images/{chatId}/{fileName} {
      allow read: if isAuthenticated();
      allow write: if isAuthenticated();
      allow delete: if isAuthenticated();
    }

    // System images - read access for all, write for admins
    match /system/{fileName} {
      allow read: if true;
      allow write: if isAdmin();
    }

    // Admin override for all files
    match /{allPaths=**} {
      allow read, write: if isAdmin();
    }
  }
}