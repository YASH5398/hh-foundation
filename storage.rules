rules_version = '2';
service firebase.storage {
  match /b/{bucket}/o {
    // Allow authenticated users to upload and read payment proofs for any user
    // This is needed for the SendHelp payment verification process
    match /paymentProofs/{userId}/{fileName} {
      allow read, write: if request.auth != null;
    }
    
    // Allow authenticated users to upload payment proofs (flat structure)
    match /payment-proofs/{fileName} {
      allow read, write: if request.auth != null;
    }
    
    // Allow authenticated users to upload and read epin screenshots
    match /epin-screenshots/{userId}/{fileName} {
      allow read, write: if request.auth != null;
    }
    
    // Allow authenticated users to upload and read profile images
    match /profileImages/{userId}/{fileName} {
      allow read, write: if request.auth != null;
    }
    
    // Allow authenticated users to upload and read profile pictures
    match /profilePics/{userId}/{fileName} {
      allow read, write: if request.auth != null;
    }
    
    // Allow authenticated users to upload and read upline payment proofs
    match /upline-payment-proofs/{userId}/{fileName} {
      allow read, write: if request.auth != null;
    }
    
    // Allow public read access to QR codes
    match /qr-codes/{fileName} {
      allow read: if true;
    }
    
    // Admin can access all files
    match /{allPaths=**} {
      allow read, write: if request.auth != null && request.auth.token.admin == true;
    }
  }
}